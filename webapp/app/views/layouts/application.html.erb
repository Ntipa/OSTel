<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Devise") %></title>
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag 'reset' %>
    <%= stylesheet_link_tag 'layout' %>
    <%= stylesheet_link_tag 'prettyPhoto' %>
    <%= stylesheet_link_tag 'style' %>
    <%= javascript_include_tag "jquery-1.6.js" %>
    <%= javascript_include_tag "cufon-yui.js" %>
    <%= javascript_include_tag "cufon-replace.js" %>
    <%= javascript_include_tag "Ubuntu_400.font.js" %>
    <%= javascript_include_tag "Ubuntu_700.font.js" %>
    <%= javascript_include_tag "bgSlider.js" %>
    <%= javascript_include_tag "script.js" %>
    <%= javascript_include_tag "pages.js" %>
    <%= javascript_include_tag "jquery.easing.1.3.js" %>
    <%= javascript_include_tag "bg.js" %>
    <%= javascript_include_tag "tabs.js" %>
    <%= javascript_include_tag "jquery.prettyPhoto.js" %>
    <%= yield(:head) %>
  </head>
  <body id="page1">
		<div class="spinner"></div>
		<div id="bgSlider"></div>
		<div class="extra">
			<div class="main">
				<div class="box">
	<!-- header -->
					<header>
						<h1><%=link_to "Ostel Open Secure Telephony Network", root_path, :id=>"logo" %></h1>
						<nav>
							<ul id="menu">
								<li><a href="#!/page_About"><span></span><strong>Learn</strong></a></li>
								<li><a href="#!/page_Services"><span></span><strong>Install</strong></a></li>
								<li><a href="#!/page_Contact"><span></span><strong>Contact</strong></a></li>
							</ul>
						</nav>
					</header>
	<!--content -->
					<article id="content">

							
							<%- flash.each do |name, msg| -%>
								<%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
							<%- end -%>

							<% if user_signed_in? %>
								<div>
								<p>Welcome! These are your OSTel creditials for this server.</p>
								<table class="info">
									<tr><th>OSTel ID</th><td><%= current_user.freeswitch_id %></td></tr>
									<tr><th>OSTel Password</th><td><%= current_user.freeswitch_password %></td></tr>
								</table>
								</div>
							<% end %>



							<%= yield %>

						</div>
					</article>
	<!-- / content -->
				</div>
			</div>
			<div class="block"></div>
		</div>
		<div class="bg1">
			<div class="main">
	<!-- footer -->
				<footer>
					<div class="bg_spinner"></div>
					<ul class="pagination">
						<li class="current"><%= link_to("1", "/images/bg_img1.jpg") %></li>
						<li><%= link_to("2", "/images/bg_img2.jpg") %></li>
						<li><%= link_to("3","/images/bg_img3.jpg") %></li>
					</ul>
					<div class="col_1">
						<a href="https://www.guardianproject.info" target="_blank" id="footer_logo">Mark Belinsky</a> 
					</div>
					<div class="col_2">
						Design from <a rel="nofollow" href="http://www.html5xcss3.com/" target="_blank">html5xcss3.com</a>
						All content <a rel="nofollow" href="https://creativecommons.org/licenses/by-nc-nd/3.0/" target="_blank">Creative Commons [BY-NC-ND 3.0]</a>
						<!-- {%FOOTER_LINK} -->
					</div>
				</footer>
	<!-- / footer-->
			</div>
		</div>
		<script type="text/javascript"> Cufon.now(); </script>
		<script>
			$(window).load(function() {
				$('.spinner').fadeOut();
				$('body').css({overflow:'inherit'})
			})
		</script>
  </body>
</html>
