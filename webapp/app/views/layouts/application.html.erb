<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Devise") %></title>
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag 'application' %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <div id="logo"><a href="/"><%= image_tag("ostn.png") %></a></div>
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      <%- end -%>

      <% if user_signed_in? -%>
        <div>
        <p>Welcome! These are your OSTel creditials for this server.</p>
        <table class="info">
          <tr><th>OSTel ID</th><td><%= current_user.freeswitch_id %></td></tr>
          <tr><th>OSTel Password</th><td><%= current_user.freeswitch_password %></td></tr>
        </table>
        </div>
      <% end -%>

      <div style="clear:both"></div>

      <%= yield %>

      <div style="background-color: #FFF; text-align: center; padding: 10px; margin-top: 2em"><a href="https://guardianproject.info/"><%= image_tag("GP_logo.png") %></a></div>
    </div>
    <%= javascript_include_tag :defaults %>
  </body>
</html>
